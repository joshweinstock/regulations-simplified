<div class="container">
  <div class="row">
    <div class="col-md-12">
    <h1>
      <%= @the_regulation.title %>
    </h1>      </div>
  </div>
<div>

<hr>

  <div class="row">
    <div class="col-md-3">
      <div class="alert alert-primary">
      Department or Agency
      </div>
    </div>

    <div class="col-md-9">
      <div class="alert alert-secondary">
    <%= @the_regulation.agency_names.join(", ") %>
      </div>
    </div>
  </div>

    <div class="row">
    <div class="col-md-3">
      <div class="alert alert-primary">
      Title
      </div>
    </div>

    <div class="col-md-9">
      <div class="alert alert-secondary">
     <%= @the_regulation.title %>
      </div>
    </div>
  </div>

   <div class="row">
    <div class="col-md-3">
      <div class="alert alert-primary">
      Status
      </div>
    </div>

    <div class="col-md-9">
      <div class="alert alert-secondary">
     <%= @the_regulation.action %>
      </div>
    </div>
  </div>

   <div class="row">
    <div class="col-md-3">
      <div class="alert alert-primary">
      Citation
      </div>
    </div>

    <div class="col-md-9">
      <div class="alert alert-secondary">
     <%= @the_regulation.citation %>
      </div>
    </div>
  </div>

   <div class="row">
    <div class="col-md-3">
      <div class="alert alert-primary">
      Significant
      </div>
    </div>

    <div class="col-md-9">
      <div class="alert alert-secondary">
      <% if @the_regulation.significant == true %>
          Yes
        <% else %>
           No
        <% end %>
      </div>
    </div>
  </div>

<div class="row">
        <div class="col-md-12">
      <div class="alert alert-primary">
      Summary:
      </div>
    </div>
    </div>

    <div class="row">
    <div class="col-md-12">
      <div class="alert alert-secondary">
           <%= @the_regulation.summary %>

      </div>
    </div>
    </div>

<div class="row">
    <div class="col-md-4">
      <div class="alert alert-success">
        <a href="<%= @the_regulation.register_url %>"class="alert-link" target="_blank"> Federal Register Regulation </a>
      </div>
    </div>

    <div class="col-md-4">
      <div class="alert alert-success">
  <a href="<%= @the_regulation.pdf_url %>" class="alert-link" target="_blank"> PDF Link </a>
      </div>
    </div>

    <div class="col-md-4">
      <div class="alert alert-success">
  <a href="<%= @the_regulation.original_url %>" class="alert-link"target="_blank"> Text Link </a>
      </div>
    </div>
  </div>


    </div>


      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_regulation.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_regulation.updated_at) %> ago
      </dd>


<hr>

<hr>
    <div>
      <div>
        <a href="/regulations">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_regulation/<%= @the_regulation.id %>">
          Delete regulation
        </a>
      </div>
    </div>

    <hr>
